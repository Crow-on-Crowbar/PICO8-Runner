{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",              
    "lib": ["ES2022"],
    "rootDir": "src",
    "outDir": "out",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,           
    "moduleResolution": "node",        
    "types": ["node", "vscode", "mocha"],       
    "skipLibCheck": true              
  },
  "include": ["src"]
}
